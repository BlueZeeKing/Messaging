    <div id="namePrompt">
        Name: <input id="name" type="text">
        <div></div>
        <button id="submit">Submit!</button>
    </div>
    <div id="newLetter">
        To: <input id="to" type="text">
        <br>
        <hr>
        <textarea id="body"></textarea>
        <button id="send">Send!</button>
        <p id="closeNew">âŒ</p>
    </div>
    <div id="readLetter">
        <p id="from"></p>
        <hr>
        <p id="bodyR"></p>
        <button id="close">Close</button><button id='reply'>Reply</button><input name="reply" id='replyMsg'>
    </div>
    <p id="msgStatus"></p>
    <script src="main.js"></script>
</body>
</html>